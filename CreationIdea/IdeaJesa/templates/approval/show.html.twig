{% extends 'base.html.twig' %}

{% block title %}Approval Details{% endblock %}

{% block body %}
    <h1>Approval Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ approval.id }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ approval.approvalStatus }}</td>
            </tr>
            <tr>
                <th>Date of Approval</th>
                <td>{{ approval.dateApprouval ? approval.dateApprouval|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ approval.createdAt ? approval.createdAt|date('Y-m-d H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('approval_index') }}" class="btn btn-secondary">Back to list</a>
    <a href="{{ path('approval_edit', {'id': approval.id}) }}" class="btn btn-primary">Edit</a>

    <form method="post" action="{{ path('approval_delete', {'id': approval.id}) }}" style="display:inline-block;">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ approval.id) }}">
        <button class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
    </form>
{% endblock %}
